<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="free_agent_workflow.manager.class">FreeAgent\WorkflowBundle\Manager\Manager</parameter>
        <parameter key="free_agent_workflow.process_manager.class">FreeAgent\WorkflowBundle\Manager\ProcessManager</parameter>
        <parameter key="free_agent_workflow.model_storage.class">FreeAgent\WorkflowBundle\Model\ModelStorage</parameter>
        <parameter key="free_agent_workflow.model_state.class">FreeAgent\WorkflowBundle\Entity\ModelState</parameter>
    </parameters>

    <services>
        <service id="free_agent_workflow.manager" class="%free_agent_workflow.manager.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="free_agent_workflow.process_manager" class="%free_agent_workflow.process_manager.class%">
            <argument type="collection" />
            <argument>%free_agent_workflow.process_handler_class%</argument>
        </service>

        <service id="free_agent_workflow.model_storage" class="%free_agent_workflow.model_storage.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%%free_agent_workflow.model_state.class%%</argument>
        </service>
    </services>

</container>
